<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Revzen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/d_dark_purple</item>
        <item name="colorPrimaryVariant">@color/d_medium_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/d_yellow</item>
        <item name="colorSecondaryVariant">@color/d_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorSecondary">?attr/colorSecondary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/red</item>
        <item name="android:background">@color/dark_grey</item>
    </style>
</resources>