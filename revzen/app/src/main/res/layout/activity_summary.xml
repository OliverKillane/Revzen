<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">

    <TextView
        android:id="@+id/summaryTitleView"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:background="?colorPrimaryVariant"
        android:gravity="center"
        android:text="@string/summary_title"
        android:textAllCaps="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/summarybg"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/summarybg"
        android:layout_width="334dp"
        android:layout_height="620dp"
        android:layout_marginBottom="28dp"
        android:background="?colorPrimaryVariant"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/summaryXPTitle"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="?colorPrimaryVariant"
        android:text="@string/summary_xp"
        android:textAllCaps="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toTopOf="@+id/summarybg" />

    <TextView
        android:id="@+id/summaryXP"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:background="?colorPrimaryVariant"
        android:text=""
        android:textAllCaps="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toBottomOf="@+id/summaryXPTitle" />

    <TextView
        android:id="@+id/summaryTotalStudyTitle"
        android:layout_width="306dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="?colorPrimaryVariant"
        android:text="@string/summary_total_study"
        android:textAllCaps="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toBottomOf="@+id/summaryXP" />

    <TextView
        android:id="@+id/summaryTotalBreakTitle"
        android:layout_width="305dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="?colorPrimaryVariant"
        android:text="@string/summary_total_break"
        android:textAllCaps="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toBottomOf="@+id/summaryTotalStudy" />

    <TextView
        android:id="@+id/summaryRatioTitle"
        android:layout_width="305dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="?colorPrimaryVariant"
        android:text="@string/summary_ratio"
        android:textAllCaps="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toBottomOf="@+id/summaryTotalBreak" />

    <TextView
        android:id="@+id/summaryTotalStudy"
        android:layout_width="279dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:background="?colorPrimaryVariant"
        android:text=""
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toBottomOf="@+id/summaryTotalStudyTitle" />


    <TextView
        android:id="@+id/summaryRatio"
        android:layout_width="279dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:background="?colorPrimaryVariant"
        android:text=""
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toBottomOf="@+id/summaryRatioTitle" />

    <TextView
        android:id="@+id/summaryTotalBreak"
        android:layout_width="279dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:background="?colorPrimaryVariant"
        android:text=""
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:layout_constraintTop_toBottomOf="@+id/summaryTotalBreakTitle" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="103dp"
        android:layout_height="57dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:onClick="goToMenu"
        android:text="OK"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/summarybg"
        app:layout_constraintEnd_toEndOf="@+id/summarybg" />

    <ImageView
        android:id="@+id/summaryPetImage"
        android:layout_width="177dp"
        android:layout_height="140dp"
        android:visibility="invisible"
        android:background="?colorPrimaryVariant"
        app:layout_constraintBottom_toTopOf="@+id/summaryPetXP"
        app:layout_constraintEnd_toEndOf="@+id/summaryPetXP"
        app:layout_constraintStart_toStartOf="@+id/summaryPetXP"
        app:srcCompat="@drawable/petstudy_husky" />

    <ImageView
        android:id="@+id/summaryPetHealth"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:background="?colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="@+id/summarybg"
        app:layout_constraintEnd_toStartOf="@+id/okButton"
        app:layout_constraintStart_toStartOf="@+id/summarybg"
        app:srcCompat="@drawable/heart0" />

    <TextView
        android:id="@+id/summaryPetXP"
        android:layout_width="131dp"
        android:layout_height="27dp"
        android:text=""
        android:background="?colorPrimaryVariant"
        app:layout_constraintBottom_toTopOf="@+id/summaryPetHealth"
        app:layout_constraintEnd_toEndOf="@+id/summaryPetHealth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/summaryPetHealth" />


</androidx.constraintlayout.widget.ConstraintLayout>