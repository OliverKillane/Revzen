<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_button"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <ImageView
        android:id="@+id/rowIcon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="6dip"
        android:contentDescription="@string/icon_image_desc"
        android:src="@drawable/petfail_shiba" />

    <TextView
        android:id="@+id/rowDescription"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="165dp"
        android:layout_marginBottom="11dp"
        android:layout_toRightOf="@id/rowIcon"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="@string/sample_subtitle_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rowTitle"
        android:layout_width="191dp"
        android:layout_height="17dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/rowDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@id/rowIcon"
        android:gravity="center_vertical"
        android:text="@string/sample_title_text"
        android:textSize="16sp" />

    <Button
        android:id="@+id/rowButton"
        android:layout_width="279dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-124dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/rowDescription"
        android:minHeight="48dp"
        android:text="@string/sample_button_text"
        android:textSize="11sp" />

</RelativeLayout>
