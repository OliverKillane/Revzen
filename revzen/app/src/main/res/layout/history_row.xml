<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/sessionIcon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="6dip"
        android:contentDescription="@string/icon_image_desc"
        android:src="@drawable/petfail_shiba" />

    <TextView
        android:id="@+id/sessionDescription"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/sessionIcon"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="@string/sample_subtitle_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sessionTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/sessionDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/sessionIcon"
        android:gravity="center_vertical"
        android:text="@string/sample_title_text"
        android:textSize="16sp" />

</RelativeLayout>